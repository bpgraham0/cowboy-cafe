<UserControl x:Class="PointOfSale.CustomizationScreens.CornDodgersCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="34">Customize these Corn Dodgers</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" FontSize="16">Size:</TextBlock>
                <Button Width="60" Height="30" Name="SmallSize" Margin="2,2,2,2" Click="SmallSize_Click">Small</Button>
                <Button Width="60" Height="30" Name="MediumSize" Margin="2,2,2,2" Click="MediumSize_Click">Medium</Button>
                <Button Width="60" Height="30" Name="LargeSize" Margin="2,2,2,2" Click="LargeSize_Click">Large</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
